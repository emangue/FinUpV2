# ⚠️ CONFIGURAÇÃO DE PRODUÇÃO - NÃO COMMITAR!
# Este arquivo deve ser criado MANUALMENTE na VM de produção

# APLICAÇÃO
APP_NAME=Sistema de Finanças API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# DATABASE - Path na VM
DATABASE_PATH=/var/lib/financas/db/financas.db

# SEGURANÇA - JWT
# ⚠️ CRÍTICO: Gerar nova SECRET_KEY com: openssl rand -hex 32
SECRET_KEY=GERAR_NOVA_CHAVE_AQUI_COM_OPENSSL_RAND
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - ⚠️ MEGA IMPORTANTE: DEVE SER HTTPS EM PRODUÇÃO!
# Trocar pelo domínio real: https://financas.seudomain.com.br
BACKEND_CORS_ORIGINS=https://financas.seudomain.com.br

# SERVIDOR
HOST=0.0.0.0
PORT=8000

# RATE LIMITING
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5

# BACKUP S3 (configurar após deploy)
AWS_ACCESS_KEY_ID=sua_access_key_aqui
AWS_SECRET_ACCESS_KEY=sua_secret_key_aqui
S3_BUCKET_NAME=financas-backups
S3_REGION=us-east-1
