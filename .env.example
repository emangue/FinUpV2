# ============================================
# Exemplo de .env para Docker
# Copie para .env e ajuste os valores
# ============================================

# ==========================================
# PostgreSQL
# ==========================================
POSTGRES_USER=finup_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=finup_db

# ==========================================
# Backend
# ==========================================
DATABASE_URL=postgresql://finup_user:change_me_in_production@postgres:5432/finup_db
REDIS_URL=redis://redis:6379/0
JWT_SECRET_KEY=change_me_to_64_chars_random_string
DEBUG=false
BACKEND_CORS_ORIGINS=https://meufinup.com.br,https://meufinup.com.br/admin

# ==========================================
# Frontend
# ==========================================
NEXT_PUBLIC_API_URL=https://meufinup.com.br

# ==========================================
# Build Info (opcional)
# ==========================================
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse --short HEAD)

# ==========================================
# Gerar secrets seguros:
# ==========================================
# JWT: python3 -c "import secrets; print(secrets.token_hex(32))"
# Password: openssl rand -base64 32
